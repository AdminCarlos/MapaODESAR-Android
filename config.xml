<?xml version='1.0' encoding='utf-8'?>
<widget id="com.odesar.mapaodesar" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Mapa ODESAR</name>
    <description>
        Mapa Biocultural Interactivo de Matagalpa
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Soluciones Inform√°ticas Matagalpa
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="22" />
        <preference name="android-targetSdkVersion" value="26" /> 
        <allow-intent href="market:*" />
        <preference name="SplashScreenDelay" value="5000" />
        <preference name="ShowSplashScreenSpinner" value="false"/>
        <splash src="www/img/splashscreen.png" density="port-hdpi"/>
        <splash src="www/img/splashscreen.png" density="port-ldpi"/>
        <splash src="www/img/splashscreen.png" density="port-mdpi"/>
        <splash src="www/img/splashscreen.png" density="port-xhdpi"/>
        <splash src="www/img/splashscreen.png" density="port-xxhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="www/img/logo.png" />
</widget>
